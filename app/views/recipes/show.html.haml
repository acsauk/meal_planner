.container
  .row
    .column
      %h1= @recipe.title
      %h3 Instructions
      = @recipe.instructions
      %p
      %h3 Ingredients
      - @recipe.ingredients.each do |ingredient|
        = "#{ingredient.quantities.first.amount} #{ingredient.quantities.first.unit} #{ingredient.name}"
        %br
      %br
      = link_to "Add meal", new_meal_path, class: "button"
